extends layout

append body
  h1= title
  link(rel='stylesheet', href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-select/1.12.2/css/bootstrap-select.min.css")
  .container
    .page-header: h1 This shows the location of the device
    .row
      .col-md-8
        div#map(style="width:100%;height:400px")
      .col-md-4
        div
          p Latitude:
          input(type='number', step="any")#latitude
        div
          p Longitude:
          input(type='number', step='any')#longitude
        button(
          type='button'
          onclick="newPositionOne()"
        ) Save
  script(src="javascripts/map/main.js")
  script(src="https://maps.googleapis.com/maps/api/js?key=AIzaSyAmY343-y1IirBm2CQtRdk9q04stiSMUG8&callback=initMap")
